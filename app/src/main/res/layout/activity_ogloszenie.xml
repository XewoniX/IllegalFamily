<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <FrameLayout
        android:id="@+id/frameStackdescription"
        android:layout_width="@dimen/_330pxh"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bg_white_a700_26_radius_30">

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_marginRight="@dimen/_7pxv"
            android:padding="0dp"
            android:stateListAnimator="@null"
            android:visibility="gone"
            app:icon="@drawable/img_line_x"
            app:iconTint="#FF0000" />

        <TextView
            android:id="@+id/txtDescription"
            style="@style/txtInterbold14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_19pxv"
            android:layout_marginEnd="@dimen/_18pxh"
            android:layout_marginBottom="@dimen/_19pxv"
            android:gravity="top|start"
            android:text="@{homeViewVM.homeViewModel.txtDescription}"
            android:textAllCaps="true"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtDescription2"
            style="@style/txtInterbold14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_60pxv"
            android:layout_marginEnd="@dimen/_18pxh"
            android:layout_marginBottom="@dimen/_19pxv"
            android:gravity="top|start"
            android:text="@{homeViewVM.homeViewModel.txtDescription}"
            android:textAllCaps="true"
            android:textColor="#FFFFFF" />

    </FrameLayout>


</LinearLayout>