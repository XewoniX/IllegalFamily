<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_A700_26"/>
            <corners android:radius="@dimen/_30pxh"/>
        </shape>
    </item>
    <!-- Border (with negative margins to push it outside) -->
    <item
        android:right="1px"
        android:left="1px"
        android:top="1px"
        android:bottom="1px">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="10px"
                android:color="@android:color/white"/>
            <corners android:radius="@dimen/_30pxh"/>
        </shape>
    </item>
</layer-list>
